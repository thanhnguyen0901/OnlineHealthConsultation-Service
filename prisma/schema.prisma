// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  PATIENT
  DOCTOR
  ADMIN
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum QuestionStatus {
  PENDING
  ANSWERED
  MODERATED
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum RatingStatus {
  VISIBLE
  HIDDEN
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  fullName     String
  role         Role
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  patientProfile PatientProfile?
  doctorProfile  DoctorProfile?
  refreshTokens  RefreshToken[]
  sessions       UserSession[]

  @@index([email])
  @@index([role])
  @@map("users")
}

model PatientProfile {
  id             String    @id @default(cuid())
  userId         String    @unique
  dateOfBirth    DateTime?
  gender         Gender?
  phone          String?
  address        String?
  medicalHistory String?   @db.Text
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  questions    Question[]
  appointments Appointment[]
  ratings      Rating[]

  @@index([userId])
  @@map("patient_profiles")
}

model DoctorProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  specialtyId       String
  bio               String?  @db.Text
  yearsOfExperience Int      @default(0)
  ratingAverage     Float    @default(0)
  ratingCount       Int      @default(0)
  schedule          String?  @db.Text // JSON string for schedule data
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  specialty    Specialty     @relation(fields: [specialtyId], references: [id])
  questions    Question[]
  answers      Answer[]
  appointments Appointment[]
  ratings      Rating[]

  @@index([userId])
  @@index([specialtyId])
  @@map("doctor_profiles")
}

model Specialty {
  id          String    @id @default(cuid())
  name        String    @unique // Kept for backward compatibility
  nameEn      String
  nameVi      String
  description String?   @db.Text
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  doctors DoctorProfile[]

  @@map("specialties")
}

model Question {
  id        String         @id @default(cuid())
  patientId String
  doctorId  String?
  title     String
  content   String         @db.Text
  status    QuestionStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  patient PatientProfile @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor  DoctorProfile? @relation(fields: [doctorId], references: [id])
  answers Answer[]

  @@index([patientId])
  @@index([doctorId])
  @@index([status])
  @@map("questions")
}

model Answer {
  id         String   @id @default(cuid())
  questionId String
  doctorId   String
  content    String   @db.Text
  isApproved Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  question Question      @relation(fields: [questionId], references: [id], onDelete: Cascade)
  doctor   DoctorProfile @relation(fields: [doctorId], references: [id])

  @@index([questionId])
  @@index([doctorId])
  @@map("answers")
}

model Appointment {
  id          String            @id @default(cuid())
  patientId   String
  doctorId    String
  scheduledAt DateTime
  status      AppointmentStatus @default(PENDING)
  reason      String            @db.Text
  notes       String?           @db.Text
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  patient PatientProfile @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor  DoctorProfile  @relation(fields: [doctorId], references: [id])
  ratings Rating[]

  @@index([patientId])
  @@index([doctorId])
  @@index([status])
  @@index([scheduledAt])
  @@map("appointments")
}

model Rating {
  id            String       @id @default(cuid())
  patientId     String
  doctorId      String
  appointmentId String
  score         Int // 1-5
  comment       String?      @db.Text
  status        RatingStatus @default(VISIBLE)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  patient     PatientProfile @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor      DoctorProfile  @relation(fields: [doctorId], references: [id])
  appointment Appointment    @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  @@unique([appointmentId, patientId])
  @@index([patientId])
  @@index([doctorId])
  @@index([status])
  @@map("ratings")
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @db.Text
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token(length: 255)])
  @@index([userId])
  @@map("refresh_tokens")
}

model UserSession {
  id               String    @id @default(cuid())
  userId           String
  refreshTokenHash String    @unique // SHA-256 hash of refresh token
  expiresAt        DateTime
  revokedAt        DateTime?
  lastUsedAt       DateTime  @default(now())
  createdAt        DateTime  @default(now())
  userAgent        String?   @db.Text
  ipAddress        String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([refreshTokenHash])
  @@index([expiresAt])
  @@map("user_sessions")
}
